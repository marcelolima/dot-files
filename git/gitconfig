[ui]
	core = true
[color]
    ui = auto
[core]
	editor = vim
[mergetool "gvim"]
	cmd = gvim $MERGED
[alias]
    co = checkout
    c = commit
    b = branch
    s = status
    tree = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    dc = diff --cached
    d = diff
    a = add
[rerere]
	enabled = 1
	autoupdate = true
[mergetool]
	keepBackup = false
[push]
	default = simple
[init]
	templatedir = ~/.git_template
