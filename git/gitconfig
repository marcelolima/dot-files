[core]
    name = Marcelo Lima
    email = mcdlima@gmail.com
[ui]
	core = true
[color]
    ui = auto
[core]
	editor = vim
[mergetool "gvim"]
	cmd = gvim $MERGED
[alias]
    co = checkout
    c = commit
    cm = commit -m
    b = branch
    s = status
    t = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    dc = diff --cached
    d = diff
    a = add
    ap = add -p
    l = log
    uc = reset HEAD~1
    cob = checkout -b
    cp = cherry-pick
    us = reset HEAD
    ca = commit --amend
    lf = log --name-only
    lp = log -p
    ri = rebase -i
    ls = log --stat
    r = rebase
    rv = remote -v
    pr = pull --rebase
    su = branch -u
    rl = reflog
    rh = reset --hard
[rerere]
	enabled = 1
	autoupdate = true
[mergetool]
	keepBackup = false
[push]
	default = simple
[init]
	templatedir = ~/.git_template
