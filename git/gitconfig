[ui]
	core = true
[color]
    ui = auto
[core]
	editor = vim
[mergetool "gvim"]
	cmd = gvim $MERGED
[alias]
    ch = checkout
    br = branch
    st = status
    tree = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    diffc = diff --cached
[rerere]
	enabled = 1
	autoupdate = true
[mergetool]
	keepBackup = false
[push]
	default = simple
[init]
	templatedir = ~/.git_template
